<%- include('../partials/header'); %>

<!--Main container for the delete confirmation page-->
<div class="container mt-5">
    <!--Page title-->
    <h1 class="h3 mb-4">Delete Workout</h1>

    <!--Warning message that is shown before deleting a workout-->
    <div class="alert alert-warning">
        Are you sure you want to delete this workout?
    </div>

    <!--Showing the workout details so the user knows what they are deleting-->
    <div class="card mb-4">
        <div class="card-body">
            <!--Workout name-->
            <h5 class="card-title mb-1"><%= workout.workoutName %></h5>
            <!--Core workout information such as for example type, duration, intensity-->
            <p class="text-muted mb-2">
                <%= workout.workoutType %> ·
                <%= workout.durationMinutes %> minutes ·
                <%= workout.intensity %>
            </p>
            <!--Workout date-->
            <p class="mb-1">
                <strong>Date:</strong>
                <%= workout.date ? workout.date.toDateString() : 'N/A' %>
            </p>
            <!--Optional notes if the workout has any-->
            <% if (workout.notes) { %>
                <p class="mb-0">
                    <strong>Notes:</strong> <%= workout.notes %>
                </p>
            <% } %>
        </div>
    </div>

    <!--Form that actually deletes the workout when user confirms the submit button-->
    <form action="/workouts/<%= workout._id %>/delete" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Yes, delete</button>
    </form>

    <!--Cancel button to return back to where the user was without deleting-->
    <a href="/workouts" class="btn btn-secondary ms-2">Cancel</a>
</div>

<%- include('../partials/footer'); %>

